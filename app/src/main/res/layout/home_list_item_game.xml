<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/item_margin_bottom"
    android:layout_marginStart="@dimen/item_game_margin_left"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2">

        <ImageView
            android:id="@+id/game_team_one_logo"
            android:layout_width="@dimen/logo_image_size"
            android:layout_height="@dimen/logo_image_size"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/logo_image_margin_left" />

        <TextView
            android:id="@+id/game_team_one_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/game_team_one_logo"
            android:textSize="@dimen/game_text_size" />

    </RelativeLayout>

    <TextView
        android:id="@+id/game_score"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="@dimen/game_text_size" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2">

        <TextView
            android:id="@+id/game_team_two_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/game_team_two_logo"
            android:textAlignment="viewEnd"
            android:textSize="@dimen/game_text_size" />

        <ImageView
            android:id="@+id/game_team_two_logo"
            android:layout_width="@dimen/logo_image_size"
            android:layout_height="@dimen/logo_image_size"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/logo_image_margin_left"
            android:layout_marginEnd="@dimen/logo_image_margin_right" />

    </RelativeLayout>

</LinearLayout>